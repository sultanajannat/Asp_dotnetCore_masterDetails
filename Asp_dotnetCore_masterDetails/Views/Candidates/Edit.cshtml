@model Asp_dotnetCore_masterDetails.Models.ViewModels.CandidateVM
@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4">Update Candidate</h1>

<div class="row">
    <div class="col">
        <form asp-action="Edit" asp-controller="Candidates" method="post" enctype="multipart/form-data">
            <div class="d-flex justify-content-between">
                <div class="col-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="CandidateId" type="hidden" />
                    <input asp-for="Image" type="hidden" />
                    <div class="row mb-2">
                        <label class="col-form-label col-3">@Html.DisplayNameFor(x=>x.CandidateName)</label>
                        <div class="col-6">
                            <input asp-for="CandidateName" class="form-control" />
                        </div>
                        <div class="col-3">
                            <span asp-validation-for="CandidateName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label class="col-form-label col-3">@Html.DisplayNameFor(x=>x.DateOfBirth)</label>
                        <div class="col-6">
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                        </div>
                        <div class="col-3">
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label class="col-form-label col-3">@Html.DisplayNameFor(x=>x.Phone)</label>
                        <div class="col-6">
                            <input asp-for="Phone" class="form-control" />
                        </div>
                        <div class="col-3">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label class="col-form-label col-3">@Html.DisplayNameFor(x=>x.ImagePath)</label>
                        <div class="col-6">
                            <input asp-for="ImagePath" class="form-control" />
                            <img class="rounded-circle" src="@Model.Image" width="35" />
                        </div>
                        <div class="col-3">
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label class="form-check-label col-3">@Html.DisplayNameFor(x=>x.Fresher)</label>
                        <div class="col-6">
                            <input asp-for="Fresher" class="form-check-input" />
                        </div>
                        <div class="col-3">
                            <span asp-validation-for="Fresher" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-9 offset-3">
                            <button type="submit" class=" btn btn-primary">Update</button>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex justify-content-end">
                        <a id="btnPlus" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i></a>
                    </div>
                    <div id="SkillContainer">
                        @foreach(var item in Model.SkillList)
                        {
                            <script>
                                LoadData(@item);
                            </script>
                        }
                    </div>
                </div>
            </div>
        </form>
        <div>
            <a asp-action="Index" asp-controller="Candidates" class="btn btn-link"><i class="fa fa-arrow-left"></i> Back to list</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


